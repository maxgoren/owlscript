def C(var i) {
    return &(i) -> i;
}

def A(var k, var inout x1, var inout x2, var inout x3, var inout x4, var inout x5) {
    def B() {
        k--;
        println "Calling A from B, now k is " + k;
        return A(k, B, x1, x2, x3, x4);
    }
    println "K: " + k;
    if (k <= 0) {
        return x4() + x5();
    }
    println "Calling B from A with k = " + k;
    return B(); 
}

def main() {
    println A(4,C(1), C(-1), C(-1), C(1), C(0));

#!/usr/local/bin/owlscript
 
def outter(x) {
    def inner(y) {
        return x + y;
    }
    return inner(x);
}

println "calling from outter: ";
println outter(5);

println "calling from main: ";
println inner(5);

println "using closure instead: ";
def addOne(y) {
    z := y;
    return lambda(x) { z := z + x + 1; return z; }
}

g := addOne(5);
println g(5);
println g(5);


y := lambda(x) { x := x + 1; return x; };

i := 0;
loop (i < 5) {
    println y(i);
    i := i + 1;
}